<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JobFlex" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_500</item>
        <item name="colorPrimaryVariant">@color/black_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_200</item>
        <item name="colorSecondaryVariant">@color/grey_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/cusToolbarStyle</item>
        <item name="actionBarTheme">@style/MyActionBar</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="cusToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <!--default 4dp-->
        <item name="titleMargin">0dp</item>
        <!--default @dimen/abc_action_bar_content_inset_with_nav-->
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.JobFlex.NoActionBar" parent="Theme.JobFlex">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.JobFlex.Splash" parent="Theme.JobFlex.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/linear_interpolator</item>
    </style>

</resources>